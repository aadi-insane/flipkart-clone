<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0"><%= @current_user.name || @current_user.email %>'s Cart</h1>
    <% if @cart.cart_items.any? %>
      <%= button_to "Empty Cart", empty_cart_path, method: :post, class: "btn btn-outline-danger" %>
    <% end %>
  </div>

  <% if @cart.cart_items.empty? %>
    <div class="card p-5 text-center">
      <h3 class="text-muted">Your cart is empty.</h3>
      <p class="text-muted">Explore our products and add some items to your cart!</p>
      <%= link_to "Go to Products", root_path, class: "btn btn-primary mt-3" %>
    </div>
  <% else %>
    <div class="card shadow-sm">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead class="table-light">
              <tr>
                <th>Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th colspan="2">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @cart.cart_items.each do |cart_item| %>
                <tr>
                  <td><%= link_to cart_item.product.name, product_path(cart_item.product), class: "text-decoration-none fw-bold" %></td>
                  <td>₹ <%= cart_item.product.price %></td>
                  <td>
                    <div class="d-flex align-items-center">
                      <%= cart_item.quantity %>
                    </div>
                  </td>
                  <td>₹ <%= cart_item.product.price * cart_item.quantity %></td>
                  <td>
                    <% if cart_item.quantity > 1 %>
                    <div class="d-inline-flex gap-2">
                      <%= button_to "Remove", cart_cart_item_path(cart_item), method: :patch, class: "btn btn-sm btn-outline-secondary" %>
                      <%= button_to "Delete", cart_cart_item_path(cart_item), method: :delete, class: "btn btn-sm btn-outline-danger" %>
                    </div>
                      
                    <% else %>
                      <%= button_to "Remove", cart_cart_item_path(cart_item), method: :delete, class: "btn btn-sm btn-outline-secondary" %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
            <tfoot>
              <tr>
                <th colspan="3" class="text-end">Cart Total:</th>
                <th>₹ <%= @cart.cart_items.sum { |item| item.product.price * item.quantity } %></th>
                <th></th>
              </tr>
            </tfoot>
          </table>
        </div>
      </div>
    </div>

    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
      <%= link_to "Proceed to Checkout", new_order_path, class: "btn btn-success btn-lg" %>
    </div>
  <% end %>
</div>

