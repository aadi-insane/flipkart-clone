<div class="card shadow-sm">
  <div class="card-body">
    <h5 class="card-title">All Products</h5>
    <% if @results.empty? %>
      <div class="alert alert-info" role="alert">
        No products found with "<%= @query %>".
      </div>
    <% else %>
      <div class="d-flex flex-wrap justify-content-center">
    <% @results.each do |product| %>
      <div class="card m-3" style="max-width: 320px">
        
          <%= link_to image_tag("product.jpg", alt: "product_image", class: "card-img-top"), product_path(product) %>

          <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text"><%= truncate(product.description, length: 50) %></p>
              <div class="d-flex justify-content-between align-items-center">
                  <span class="h5 mb-0">â‚¹ <%= product.price %></span>
                  <div>
                      <i class="bi bi-star-fill text-warning"></i>
                      <i class="bi bi-star-fill text-warning"></i>
                      <i class="bi bi-star-fill text-warning"></i>
                      <i class="bi bi-star-fill text-warning"></i>
                      <i class="bi bi-star-half text-warning"></i>
                      <small class="text-muted">(4.5)</small>
                  </div>
              </div>
          </div>
          <div class="card-footer d-flex justify-content-between bg-light">
              <%= link_to "Show Product", product_path(product), class: "btn btn-outline-secondary w-50" %>
              <%# <button class="btn btn-outline-secondary btn-sm"><i class="bi bi-heart"></i></button> %>
          </div>
      </div>
    <% end %>
  </div>
    <% end %>
  </div>
</div>
<div class="pagination justify-content-center"> 
    <%= will_paginate @results, 
  renderer: WillPaginate::ActionView::BootstrapLinkRenderer, 
  list_classes: %w(pagination justify-content-center) %>
</div>
