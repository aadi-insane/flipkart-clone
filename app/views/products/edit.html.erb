<h1 class="text-center mb-4">Add New Product</h1>

<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-10 col-xl-8">
      <%= form_with model: @product, class: "card shadow-sm border-0 p-4", local: true do |f| %>
        
        <div class="row g-3">
          <div class="col-md-6">
            <%= f.label :name, class: "form-label fw-semibold" %>
            <%= f.text_field :name, class: "form-control", placeholder: "Enter product name" %>
          </div>

          <div class="col-md-6">
            <%= f.label :brand, class: "form-label fw-semibold" %>
            <%= f.text_field :brand, class: "form-control", placeholder: "e.g. Nike, Samsung" %>
          </div>

          <div class="col-md-6">
            <%= f.label :category, class: "form-label fw-semibold" %>
            <%= f.text_field :category, class: "form-control", placeholder: "e.g. Shoes, Electronics" %>
          </div>

          <div class="col-md-6">
            <%= f.label :price, "Price (in â‚¹)", class: "form-label fw-semibold" %>
            <%= f.number_field :price, class: "form-control", step: "0.01", min: "1", max: "1000000", placeholder: "e.g. 1999.99" %>
          </div>

          <div class="col-md-6">
            <%= f.label :stock, class: "form-label fw-semibold" %>
            <%= f.number_field :stock, class: "form-control", min: "1", placeholder: "e.g. 50" %>
          </div>

          <div class="col-md-6">
            <%= f.label :color, class: "form-label fw-semibold" %>
            <%= f.text_field :color, class: "form-control", placeholder: "e.g. Red, Black" %>
          </div>

          <div class="col-md-6">
            <%= f.label :size, class: "form-label fw-semibold" %>
            <%= f.text_field :size, class: "form-control", placeholder: "e.g. M, L, 42" %>
          </div>

          <div class="col-md-6">
            <%= f.label :availability, class: "form-label fw-semibold" %>
            <%= f.select :availability, Product.availabilities.keys.map { |status| [status.titleize, status] }, {}, class: "form-select" %>
          </div>

          <div class="col-12">
            <%= f.label :description, class: "form-label fw-semibold" %>
            <%= f.text_area :description, class: "form-control", rows: 4, placeholder: "Enter detailed product description..." %>
          </div>
        </div>

        <%= f.hidden_field :seller_id, value: current_user.id %>

        <div class="d-grid gap-2 mt-4">
          <%= f.submit "Update Product", class: "btn btn-primary btn-lg" %>
        </div>

      <% end %>
    </div>
  </div>
</div>
