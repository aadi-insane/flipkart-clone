<h2>Order ID: <%= @order.id %></h2>
<p>Status: <%= @order.status.titleize %></p>
<p>Payment Option: <%= @order.payment_option.upcase %></p>
<p>Delivery Address: <%= @order.delivery_address %></p>
<p>Customer: <%= @order.customer.name %></p>
<p>Placed on: <%= @order.created_at.strftime("%d %B %Y, %I:%M %p") %></p>

<% if @order.order_items.any? %>
  <h3>Items</h3>
  <ul>
    <% @order.order_items.each do |item| %>
      <% product = item.product %>
      <% if product.present? %>
        <li>
          <strong><%= product.name %></strong> — 
          Quantity: <%= item.quantity %>, 
          Unit Price: ₹<%= number_with_precision(item.unit_price, precision: 2) %>, 
          Total: ₹<%= number_with_precision(item.total_price, precision: 2) %>
        </li>
      <% else %>
        <li>Product details not available for this item.</li>
      <% end %>
    <% end %>
  </ul>
<% else %>
  <p>No items found in this order.</p>
<% end %>

<p><strong>Order Total:</strong> ₹<%= number_with_precision(@order.total_amount, precision: 2) %></p>
